<% # Loads header area and navigation bar %>

<% warning = "Imported data will replace existing data. Most recently saved data will be used. Continue?" %>
<% nav_items = [] %>
<% nav_items << link_to("Home", users_path) %>
<% nav_items << link_to("Import Data", import_user_path(@user), data: {Confirm: warning}) %>
<% nav_items << link_to("Export Data", export_user_path(@user)) %>
<% nav_items << link_to("Preferences", "#", id: "preferences_link", class: "popup_link") %>

<div id="header_container">
  <div id="header">
    <h1><%= title %></h1>
  </div>
</div>

<% # For scroll detection %>
<div id="navigation_anchor"></div>

<div id="navigation">
  <ul class="nav_link">
    <% nav_items.each do |link| %>
      <li class="nav_link"><%= link %></li>
    <% end %>
    <% if defined? extra_nav_items %>
      <% extra_nav_items.each do |link| %>
        <li class="nav_link_right"><%= link %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<%= render template: "users/edit"  %>
