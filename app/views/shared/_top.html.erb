<% nav_items = [] %>
<% nav_items << link_to("Home", user_path(@user)) %>
<% nav_items << link_to("Preferences", edit_user_path(@user)) %>

<div id="header_container">
  <div id="header">
    <h1><%= title %></h1>
  </div>
</div>

<div id="navigation">
  <ul class="nav_link">
    <% nav_items.each do |link| %>
      <li class="nav_link"><%= link %></li>
    <% end %>
    <% if defined? extra_nav_items %>
      <% extra_nav_items.each do |link| %>
        <li class="nav_link_right"><%= link %></li>
      <% end %>
    <% end %>
  </ul>
</div>
